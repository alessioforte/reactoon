{
  "name": "@alessioforte/reactoon",
  "version": "0.2.7",
  "license": "MIT",
  "author": {
    "name": "Alessio Forte",
    "email": "alessioforte@mail.com"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@alessioforte"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alessioforte/reactoon.git"
  },
  "scripts": {
    "start": "PORT=3009 react-scripts start",
    "build": "rm -rf lib && NODE_ENV=production npm run build:esm && npm run build:cjs",
    "build:esm": "tsc src/lib/index.ts --jsx preserve --module ESNext --target ES6 --moduleResolution Node --allowSyntheticDefaultImports --declaration --outDir ./lib/esm",
    "build:cjs": "tsc src/lib/index.ts --jsx preserve --module CommonJS --target ES6 --moduleResolution Node --allowSyntheticDefaultImports --outDir ./lib/cjs",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.js",
    "lint:eslint": "eslint --ignore-path .gitignore \"src/**/*.js\"",
    "lint:eslint:fix": "eslint --ignore-path .gitignore \"src/**/*.js\" --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "format": "prettier --config .prettierrc \"src/**/*.js\" --write",
    "pack": "npm run build && npm pack"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint",
      "git add --force"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jshintConfig": {
    "esversion": "9"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "@babel/preset-typescript": "^7.13.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^2.1.8",
    "react-test-renderer": "^17.0.1",
    "styled-components": "^5.2.1",
    "stylelint": "^9.3.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "typescript": "^4.2.3",
    "typescript-plugin-styled-components": "^1.4.4"
  }
}
