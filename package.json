{
  "name": "reactoon",
  "version": "0.1.10",
  "license": "MIT",
  "author": {
    "name": "Alessio Forte",
    "email": "alessioforte@mail.com"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "files": [
    "lib",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alessioforte/reactoon.git"
  },
  "scripts": {
    "start": "PORT=3003 react-scripts start",
    "build": "rm -rf lib && NODE_ENV=production babel src/lib --out-dir lib --extensions \".ts,.tsx,.js,.jsx\" --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.js",
    "lint:eslint": "eslint --ignore-path .gitignore \"src/**/*.js\"",
    "lint:eslint:fix": "eslint --ignore-path .gitignore \"src/**/*.js\" --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "format": "prettier --config .prettierrc \"src/**/*.js\" --write",
    "pack": "npm run build && npm pack"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint",
      "git add --force"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jshintConfig": {
    "esversion": "9"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.30",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^4.4.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^3.1.0",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "^3.4.3",
    "react-test-renderer": "^16.13.0",
    "styled-components": "^4.4.1",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^3.8.3",
    "typescript-plugin-styled-components": "^1.4.4"
  },
  "dependencies": {}
}
